<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent">


<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/col"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="fill_parent">



    <com.tirthcshahgmail.ifest15.MyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mns"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!--<LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">-->

            <com.tirthcshahgmail.ifest15.WrapContentHeightViewPager
                android:id="@+id/pager"
                android:background="#ffffff"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <!--</LinearLayout>-->

    </com.tirthcshahgmail.ifest15.MyNestedScrollView>


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:layout_width="match_parent"
                android:background="@drawable/index"
                android:layout_height="190dp"
                android:minHeight="190dp"
                app:layout_collapseMode="parallax" />


            <android.support.v7.widget.Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

        <com.tirthcshahgmail.ifest15.SlidingTabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary" />

    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>

    <View
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="#bdbdbd" />

<LinearLayout
        android:layout_gravity="bottom"
        android:paddingTop="3dp"
        android:id="@+id/ll"
        android:orientation="horizontal"
        android:background="#37474f"
        android:paddingLeft="10dp"
        android:layout_weight="5.2"
        android:layout_below="@+id/col"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

<LinearLayout
    android:id="@+id/ll1"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/imageView5"
            android:layout_weight="6"
            android:src="@drawable/ic_label_white_24dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:maxLines="1"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="17dp"
            android:id="@+id/textView1" />

    </LinearLayout>-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:paddingTop="2dp"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/imageView10"
            android:layout_weight="5"
            android:src="@drawable/dollor"/>

        <TextView
            android:paddingTop="5dp"
            android:paddingLeft="1dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:maxLines="1"
            android:text="40,000"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="17dp"
            android:id="@+id/textView10" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/imageView6"
            android:src="@drawable/ic_room_white_24dp"
            android:layout_weight="5"/>

        <TextView
            android:paddingTop="2dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="17dp"
            android:paddingLeft="1dp"
            android:maxLines="1"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:id="@+id/textView4" />

    </LinearLayout>

</LinearLayout>

<LinearLayout
    android:id="@+id/ll2"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingTop="4dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/imageView4"
            android:layout_weight="5"
            android:src="@drawable/ic_alarm_white_24dp"/>

        <TextView
            android:paddingTop="3dp"
            android:paddingLeft="1dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="17dp"
            android:maxLines="1"
            android:textColor="#f44336"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textAlignment="gravity"
            android:id="@+id/textView2" />

    </LinearLayout>

    <!--<LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        </LinearLayout>-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/imageView8"
            android:src="@drawable/ic_event_white_24dp"
            android:layout_weight="5"/>

        <TextView
            android:paddingTop="3dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:maxLines="1"
            android:paddingLeft="1dp"
            android:textSize="17dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:id="@+id/textView3" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>

</LinearLayout>